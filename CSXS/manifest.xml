<?xml version='1.0' encoding='UTF-8'?>
<ExtensionManifest ExtensionBundleId="com.github.Jayvin-Leung.Photoshop-EX-Transform" ExtensionBundleVersion="1.0.0" Version="7.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ExtensionList>
    <Extension Id="com.github.Jayvin-Leung.Photoshop-EX-Transform" Version="1.0.0" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <Host Name="PHSP" Version="[20.0,99.9]" />
      <Host Name="PHXS" Version="[20.0,99.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="9.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.github.Jayvin-Leung.Photoshop-EX-Transform">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/index.html</MainPath>
          <ScriptPath>./host/index.jsx</ScriptPath>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>EX-自由变换</Menu>
          <Geometry>
            <Size>
              <Width>300</Width>
              <Height>100</Height>
            </Size>
            <MaxSize>
              <Width>500</Width>
              <Height>500</Height>
            </MaxSize>
            <MinSize>
              <Width>150</Width>
              <Height>40</Height>
            </MinSize>
          </Geometry>
          <Icons>
            <Icon Type="Normal">./icons/normal.png</Icon>
            <Icon Type="RollOver">./icons/normal.png</Icon>
            <Icon Type="DarkNormal">./icons/dark.png</Icon>
            <Icon Type="DarkRollOver">./icons/dark.png</Icon>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>